// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  address   String   @unique
  createdAt DateTime @default(now())
  links     Link[]
}

model Link {
  id         String   @id @default(cuid())
  shortCode  String   @unique
  cid        String
  createdAt  DateTime @default(now())
  clicks     Click[]               // one-to-many click events
  owner      User     @relation(fields: [ownerId], references: [id])
  ownerId    String
}

model Click {
  id        String   @id @default(cuid())
  link      Link     @relation(fields: [linkId], references: [id])
  linkId    String
  createdAt DateTime @default(now())
  device    DeviceType
  source    SourceType
  location  String
}

enum DeviceType {
  MOBILE
  DESKTOP
  TABLET
}

enum SourceType {
  DIRECT
  SOCIAL
  EMAIL
}
